@model StatsViewModel
@{
    ViewData["Title"] = "Stats";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th style="width:10%">#</th>
                <th style="width:20%"></th>
                <th style="width:55%">Name</th>
                <th style="width:15%">Votes</th>
            </tr>
        </thead>
        <tbody>
            @for(var i = 0; i < Model.Fighters.Count; i++)
            {
                var fighter = Model.Fighters[i];
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>
                        <img src="@fighter.Image" class="figure-img img-fluid rounded" alt="@fighter.Name" 
                                asp-append-version="true" width="120" height="120">
                    </td>
                    <td>@fighter.Name</td>
                    <td>@fighter.Votes</td>
                </tr>
            }
        </tbody>
    </table>
</div>